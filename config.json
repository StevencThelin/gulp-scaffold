{
  "environment": "dev",
  "mod": {
      "autoprefixer": {
          "browsers": ["last 2 versions"]
      },
      "jshint": {
        "enabled": true
      },
      "eslint": {
        "enabled": true
      },
      "browsersync": {},
      "sourcemaps": false, 
      "base64": {
        "enabled": false,
        "opt": {
            "baseDir": "/images",
            "maxImageSize": 8192,
            "debug": true
        }
      },
      "sass": {
        "opt": {}
      },
      "imagemin": {
        "opt": {
          "progressive": true,
          "interlaced": true,
          "svgPlugins": [{
            "removeViewBox":false
          },{
            "removeUselessStrokeAndFill": false
          }]
        }
      },
      "notify": {
        "title": "Dwarf Labs",
        "subtitle": "Project Gulp",
        "icon": ""
      }
  },
  "path": {
      "sass": {
        "source": "./stylesheet/source/style.scss",
        "target": "./stylesheet/build",
        "watch": ["./stylesheet/source/*.scss","./stylesheet/source/**/*.scss"]
      },
      "js": {
        "source": ["./scripts/source/vendor/*.js", "./scripts/source/site/*.js"],
        "target": "./scripts/build",
        "watch": ["./scripts/source/**/*.js"]
      },
      "images": {
        "source": ["./images/*.{gif,jpg,png}", "./images/**/*.{gif,jpg,png}"],
        "target": "./images/optimized"  
      }
  }
}
